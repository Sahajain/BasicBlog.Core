{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "home-index": {
        "ClusterId": "modern-app",
        "Match": {
          "Path": "/"
        },
        "Order": 1
      },
      "home-routes": {
        "ClusterId": "modern-app",
        "Match": {
          "Path": "/Home/{**catch-all}"
        },
        "Order": 2
      },
      "account-routes": {
        "ClusterId": "modern-app",
        "Match": {
          "Path": "/Account/{**catch-all}"
        },
        "Order": 3
      },
      "manage-routes": {
        "ClusterId": "modern-app",
        "Match": {
          "Path": "/Manage/{**catch-all}"
        },
        "Order": 4
      },
      "blog-routes": {
        "ClusterId": "modern-app",
        "Match": {
          "Path": "/Blog/{**catch-all}"
        },
        "Order": 5
      },
      "legacy-all": {
        "ClusterId": "legacy-app",
        "Match": {
          "Path": "/{**catch-all}"
        },
        "Order": 100
      }
    },
    "Clusters": {
      "legacy-app": {
        "Destinations": {
          "legacy-app/http": {
            "Address": "http://localhost:5002/"
          }
        }
      },
      "modern-app": {
        "Destinations": {
          "modern-app/http": {
            "Address": "http://localhost:5001/"
          }
        }
      }
    }
  }
}
